/* pages/searchResult/searchResult.wxss */
.select-item{
    padding-top: 5px;
    box-sizing: border-box;
    display: flex;
    height: 45px;
  }
  .select-item view{
    flex: 1;
    text-align: center;
    color: #151515;
  
  }
  .select-item view text{
    box-sizing: border-box;
    display: inline-block;
    height: 40px;
    line-height: 40px;
  }
  .select-item view.active{
    color: #fb7299;
  }
  .select-item view.active text{
    border-bottom: 2px solid #fb7299;
  }
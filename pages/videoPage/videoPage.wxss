.transmitBar {
    position: fixed;
    bottom: 0;
    left: 0;
    height: 44px;
    border-top: 1px solid #e7e7e7;
    width: 100%;
    line-height: 44px;
    background-color: #fff;
}
.transmitBar .wechat{
    width: 50%;
    float: left;
    text-align: center;
    font-size: 16px;
    color: #505050;
    border: 0;
    height: 100%;
}
.transmitBar .pic{
    float: left;
    width: 50%;
    text-align: center;
    font-size: 16px;
    color: #505050;
    border: 0;
    height: 100%;
}
.transmitBar .pic::after,.transmitBar .wechat::after{
    border: 0;

}
.transmitBar .wechat text{
    color: #57bb40;
}
.transmitBar .pic text{
    color: #505050;
}
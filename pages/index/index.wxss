.fixedLayout{
  position: fixed;
  left: 0;
  width: 100%;
  background-color: #fff;
  z-index: 99;
}
.search-bar{
  width: 100%;
  padding: 0 20px;
  box-sizing: border-box;
  height: 45px;
  background-color: white;
  overflow: hidden;
}
.search-bar .search{
  margin: 10px 0;
  
  position: relative;
}
.search-bar .search .icon-small{
  position: absolute;
  left: 10px;
  top: 50%;
  transform: translateY(-50%);
}
.search-bar .search .search-input{
  width: 100%;
  height: 25px;
  border-radius: 50px;
  background-color: #f3f3f3;
  padding-left: 30px;
  box-sizing: border-box;
  color: transparent;
}
.select-item{
  padding-top: 5px;
  box-sizing: border-box;
  display: flex;
  height: 45px;
}
.select-item view{
  flex: 1;
  text-align: center;
  color: #151515;

}
.select-item view text{
  box-sizing: border-box;
  display: inline-block;
  height: 40px;
  line-height: 40px;
}
.select-item view.active{
  color: #fb7299;
}
.select-item view.active text{
  border-bottom: 2px solid #fb7299;
}
.content{
  position: relative;
  z-index: 10;
}
/* 热门部分 */
.content .hotlist {
  
}
/* 追番部分 */
.content .animation{

}
.content .animation .timeline{
  border-top: 1px solid #e7e7e7;
}
.content .animation .timeline .weekline{
  padding: 9px 0;
  display: flex;
  justify-content: space-between;
}
.content .animation .timeline .weekline .day_of_week{
  flex: 1;
  width: 49px;
  box-sizing: border-box;
  height: 30px;
  text-align: center;
  line-height: 30px;
  border-radius: 50px;
  background-color: transparent;
  margin: 0 5px;
}
.content .animation .timeline .weekline .day_of_week{
  font-size: 28rpx; /*14px*/
}
/* 当日的样式 */
.content .animation .timeline .weekline .day_of_week.today{
  color: #fb7299;
}
/* 点击后的样式 */
.content .animation .timeline .weekline .active{
  background-color: #fb7299;
}
.content .animation .timeline .weekline .active{
  color: #fff !important;
}
.content .animation .timeline .timeline-body{
  padding-left: 13px;
}
.content .animation .timeline .timeline-body .anime-item{
  width: calc(25% - 13px);
  float: left;
  margin-right: 13px;
  box-sizing: border-box;
  margin-bottom: 12px;
}
.content .animation .timeline .timeline-body .anime-item .anime_img{
  width: 100%;
  height: 0px;
  padding-bottom: 100%;
  border-radius: 3px;
  overflow: hidden;
  position: relative;
}
.content .animation .timeline .timeline-body .anime-item .anime_img image{
  width: 100%;
  height: 100%;
  position: absolute;
}
.content .animation .timeline .timeline-body .anime-item .context{
  height: 60px;
}
.content .animation .timeline .timeline-body .anime-item .context .title{
  font-size: 28rpx;
  line-height: 20px;
  color: #212121;
}
.content .animation .timeline .timeline-body .anime-item .context .pub_index{
  font-size: 28rpx;
  color: #a1a1a1;
}
.content .animation .bangumi{
  padding-left: 11px;
  border-top: 1px solid #e7e7e7;
}
.content .animation .bangumi .b-header{
  height: 48px;
  padding: 15px 0;
  line-height: 18px;
  box-sizing: border-box;

}
.content .animation .bangumi .b-header .title{
  font-size: 16px;
  color: #212121;
}
.content .animation .bangumi .b-header .more{
  float: right;
  font-size: 14px;
  color: #999999;
  margin-right: 11px;
}
.content .animation .bangumi .b-body{
  width: 100%;
}
.content .animation .bangumi .b-body .activity{
  float: left;
  margin-right: 11px;
  margin-bottom: 11px;
  width: calc(33.33% - 11px);
  height: 48px;
  line-height: 48px;
  text-align: center;
  border-radius: 3px;
  background-color: #f4f4f4;
  color:#505050;
}
.content .animation .bangumi .b-body .activity .activity-title{}

.content .animation .bangumi .b-body .card{
  float: left;
  margin-right: 13px;
  margin-bottom: 10px;
  width: calc(33.33% - 13px);
}
.content .animation .bangumi .b-body .card .card-image{
  border-radius: 3px;
  overflow: hidden;
  position: relative;
  margin-bottom: 5px;
}
.content .animation .bangumi .b-body .card .card-image image{
  max-width: 100%;
  max-height: 100%;
  height: 300rpx;
  position: relative;
}
.content .animation .bangumi .b-body .card .card-image image::after{
  content: "";
  width: 100%;
  height: 100%;
  position: absolute;
  top: 0;
  left: 0;
  z-index: 1;
  background-color: transparent;
  box-shadow: 0px -15px 35px 0px #222 inset;
}
.content .animation .bangumi .b-body .card .card-image image .tag{
  position: absolute;
  z-index: 55;
  top: 4px;
  right: 4px;
  padding: 3px;
  color: #fff;
  background-color: #fb7299;
  font-size: 12px;
  border-radius: 3px;
}
.content .animation .bangumi .b-body .card .card-image image .number{
  position: absolute;
  bottom: 6px;
  left: 6px;
  color: #fff;
  font-size: 12px;
  z-index: 55;
}
.content .animation .bangumi .b-body .card .card-context{
  height: 65px;

}
.content .animation .bangumi .b-body .card .card-context .card-title{
  line-height: 20px;
  font-size: 16px;
  color: #282828;
  margin-bottom: 5px;
}
.content .animation .bangumi .b-body .card .card-context .card-page-index{
  font-size: 14px;
  color: #999999;
}
.b-body .change{
  height: 20px;
  text-align: center;
  color: #fb7299;
  margin-bottom: 10px;
  font-size: 32rpx;
}
.b-body .change text{
  width: 32rpx;
  height: 32rpx;
  display: inline-block;
}
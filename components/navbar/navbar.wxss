/* components/navbar/navbar.wxss */
.nav-wrap{
    position: fixed;
    width: 100%;
    top: 0;
    background-color: #fff;
    z-index: 999999;
}
/* 顶部标题 */
.nav-title{
    height: 46px;
    line-height: 46px;
    position: absolute;
    max-width: 400rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    padding-left: 10px;
    font-weight: 400;
    white-space: nowrap;
    bottom: 0;
    left: 0;
    font-size: 32rpx; /*16px*/
    color: #333;
}
.detailPage{
    height: 46px;
    line-height: 46px;
    position: absolute;
    text-overflow: ellipsis;
    padding-left: 10px;
    font-weight: 400;
    white-space: nowrap;
    bottom: 0;
    left: 0;
    font-size: 32rpx; /*16px*/
    color: #333;
}
.detailPage .capsule{
    width: 95px;
    border: 1px solid #f4f4f4;
    border-radius: 50px;
    height: 32px;
    box-sizing: border-box;
    line-height: 32px;
    float: left;
    margin: 6px 10px 6px 0;
}
.detailPage .capsule .icon-fanhui{
    float: left;
    width: 50%;
    text-align: center;
}
.detailPage .capsule .line{
    display: inline-block;
    width: 1px;
    height: 32px;
    background-color: #f4f4f4;
}
.detailPage .capsule .icon-shouye{
    text-align: center;
    width: calc(50% - 1px);
    float: right;
}
.detailPage .search{
    float: left;
    position: relative;
    height: 32px;
    margin: 6px 10px 6px 0;
}
.detailPage .search .icon-small{
    height: 20px;
    line-height: 20px;

    position: absolute;
    left: 16px;
    top: 50%;
    transform: translateY(-50%);
}
.detailPage .search .search-input{
    height: 32px;
    line-height: 12px;
    background-color: #f4f4f4;
    padding: 5px 0 5px 36px;
    box-sizing: border-box;
    border-radius: 50px;
    font-size: 12px;
    color: transparent;
}
.navTitleWithBack{
  width: 100%;
  height: 46px;
  line-height: 46px;
  position: absolute;
  text-overflow: ellipsis;
  padding-left: 10px;
  box-sizing: border-box;
  font-weight: 400;
  white-space: nowrap;
  bottom: 0;
  left: 0;
  font-size: 32rpx; /*16px*/
  color: #333;
}
.navTitleWithBack .icon-fanhui{
  float: left;
}
.navTitleWithBack .navTitle{
  display: inline-block;
  width: calc(100% - 26px);
  font-weight: bold;
  text-align: center;
}
